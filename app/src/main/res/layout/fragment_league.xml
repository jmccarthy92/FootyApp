<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.footyapp.LeagueFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_label_played_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/team_label_wins"
            android:text="MP"
            android:textStyle="bold"
            android:textSize="12sp"
            android:padding="8dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/team_label_wins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/team_label_draws"
            android:textSize="12sp"
            android:text="W"
            android:padding="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/team_label_draws"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="D"
            android:layout_toLeftOf="@+id/team_label_losses"
            android:textSize="12sp"
            android:padding="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/team_label_losses"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/team_label_goals"
            android:textSize="12sp"
            android:text="L"
            android:padding="8dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/team_label_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="GF"
            android:layout_toLeftOf="@+id/team_label_goal_difference"
            android:textSize="12sp"
            android:padding="8dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/team_label_goal_difference"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/team_label_points"
            android:textSize="12sp"
            android:padding="8dp"
            android:text="GD"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/team_label_points"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:text="Pts"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="8dp"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_league"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
