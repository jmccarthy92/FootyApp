<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/comp_row" android:clickable="true">

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dp"
        android:padding="3dp">

        <ImageView
            android:contentDescription="League Image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/league_image"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/current_match_day_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:text="Current Match Day:"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/caption"
        android:layout_below="@+id/caption"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/current_match_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/current_match_day_label"
        android:layout_below="@+id/caption"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/number_of_matches_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:text="Number Of Matches"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/caption"
        android:layout_below="@+id/current_match_day_label"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/number_of_matches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_match_day"
        android:layout_toRightOf="@+id/number_of_matches_label"
        android:textSize="12sp"
        android:paddingLeft="5dp"
        android:textColor="@color/black"/>

</RelativeLayout>